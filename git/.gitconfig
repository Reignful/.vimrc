[alias]
    a = add .
    aa = add -A
    br = branch
    brs = branch --sort=-committerdate
    ca = !"git add .; git commit --amend"
    cane = !"git add .; git commit --amend --no-edit"
    cm = !"git add .; git commit -m"
    co = checkout
    d = diff
    dc = diff --cached
    l = log --abbrev-commit
    pf = push --force-with-lease
    pl = !"git fetch --all --prune; git pull --rebase origin main"
    ri = rebase -i
    rh = reset --hard origin/main
    # View the current working tree status using the short format
    s = status -s
    st = stash --include-untracked
    v = !"gh repo view --web"
[core]
    excludesfile = .gitignore_global
[diff]
    algorithm = patience
[fetch]
    prune = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[pull]
    rebase = true
